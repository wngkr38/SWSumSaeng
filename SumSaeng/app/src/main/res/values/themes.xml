<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LovelyBaby" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item> <!--버튼 글씨체 -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_7</item>
        <item name="colorSecondaryVariant">@color/green_7</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button.Colored</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.AppCompat.Button.NoShadow" parent="Widget.AppCompat.Button">
        <item name="android:elevation">0dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- 다른 속성들... -->
    </style>

</resources>